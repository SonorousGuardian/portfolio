---
import type { CollectionEntry } from "astro:content";

interface Props {
  post: CollectionEntry<"blogs">;
}

const { data } = Astro.props.post;
---

<a class="blog-card" href={data.link} target="_blank">
  <div class="blog-header">
    <div class="icon-box">
      <i class="fa-brands fa-medium"></i>
    </div>
    <span class="badge">Article</span>
  </div>

  <div class="blog-body">
    <h5 class="title">{data.title}</h5>
    <p class="description">{data.description}</p>
  </div>

  <div class="blog-footer">
    <span class="date">
      <i class="fa-regular fa-calendar"></i>
      {data.publishDate.toLocaleDateString()}
    </span>
    <span class="read-more">
      Read on Medium <i class="fa-solid fa-arrow-up-right-from-square"></i>
    </span>
  </div>
</a>

<style>
  .blog-card {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    background: rgba(20, 20, 20, 0.6);
    backdrop-filter: blur(20px) saturate(180%);
    -webkit-backdrop-filter: blur(20px) saturate(180%);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 1.5rem;
    text-decoration: none;
    transition: all 0.3s ease-in-out;
    min-height: 240px; /* SLightly taller for description */
    position: relative;
    overflow: hidden;
    box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.3);
  }

  .blog-card:hover {
    /* Neon Cyan Border - Matching CertPreview */
    border-color: var(--neon-cyan);

    /* THE NEON SHADOW MAGIC */
    box-shadow:
      0 0 15px rgba(0, 243, 255, 0.2),
      inset 0 0 10px rgba(0, 243, 255, 0.1);

    transform: translateY(-5px);
  }

  /* Header */
  .blog-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1rem;
  }

  .icon-box {
    font-size: 2rem;
    color: var(--gray-400);
    transition: color 0.3s ease;
  }

  .blog-card:hover .icon-box {
    color: var(--neon-cyan); /* Medium logo turns Cyan on hover */
  }

  .badge {
    font-size: 0.75rem;
    background: rgba(0, 243, 255, 0.1);
    color: var(--neon-cyan);
    padding: 4px 8px;
    border-radius: 4px;
    border: 1px solid rgba(0, 243, 255, 0.2);
    font-family: var(--font-mono);
  }

  /* Body */
  .title {
    font-size: 1.1rem;
    color: #fff;
    margin: 0 0 0.5rem 0;
    font-family: var(--font-body);
    font-weight: 600;
    line-height: 1.3;
  }

  .description {
    font-size: 0.9rem;
    color: #8b949e;
    margin: 0;
    line-height: 1.5;
    flex-grow: 1;
  }

  /* Footer */
  .blog-footer {
    margin-top: 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.8rem;
    color: #8b949e;
    border-top: 1px solid #21262d;
    padding-top: 1rem;
  }

  .read-more {
    color: var(--neon-cyan);
    opacity: 0;
    transform: translateX(-10px);
    transition: 0.3s ease;
  }

  .blog-card:hover .read-more {
    opacity: 1;
    transform: translateX(0);
  }
</style>

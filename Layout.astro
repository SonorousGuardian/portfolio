---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Amritesh Shrivastava - GRC & Cybersecurity Portfolio" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
		<link href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@300;400;600&family=Inter:wght@300;400;700&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body>
		<div class="noise-overlay"></div>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--bg-dark: #050505;
		--bg-panel: #0f0f0f;
		--text-main: #e0e0e0;
		--text-muted: #888888;
		
		/* The Neon Palette */
		--neon-green: #39ff14;   /* Compliance/Success */
		--neon-cyan: #00f3ff;    /* Tech/Structure */
		--neon-purple: #bc13fe;  /* Governance/Abstract */
		
		--font-mono: 'Fira Code', monospace;
		--font-body: 'Inter', sans-serif;
	}
	
	html {
		font-family: var(--font-body);
		background: var(--bg-dark);
		color: var(--text-main);
		scroll-behavior: smooth;
	}

	body {
		margin: 0;
		padding: 0;
		overflow-x: hidden;
	}

	h1, h2, h3, .mono {
		font-family: var(--font-mono);
	}

	/* Cool subtle grain effect for the background */
	.noise-overlay {
		position: fixed;
		top: 0; left: 0; width: 100%; height: 100%;
		background: url('https://grainy-gradients.vercel.app/noise.svg');
		opacity: 0.05;
		pointer-events: none;
		z-index: 999;
	}

	/* Scrollbar Styling */
	::-webkit-scrollbar { width: 8px; }
	::-webkit-scrollbar-track { background: #000; }
	::-webkit-scrollbar-thumb { background: var(--neon-cyan); border-radius: 4px; }
	::-webkit-scrollbar-thumb:hover { background: var(--neon-green); }

	/* Selection Color */
	::selection {
		background: var(--neon-green);
		color: #000;
	}
</style>